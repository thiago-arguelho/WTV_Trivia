@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control login-input" placeholder="Login" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom:0;">
                    <input asp-for="Input.Password" class="form-control login-input" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex" style="float:right;">
                    <div class="form-group" style=" margin-right: 10px;">
                        <a class="btn loginButtons register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </div>
                    <div class="form-group" style="">
                        <button type="submit" class="btn loginButtons">Log in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
